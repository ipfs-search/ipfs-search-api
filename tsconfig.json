{
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json",

  "compilerOptions": {
    "sourceMap": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node16",
    "forceConsistentCasingInFileNames": true
  },

  "ts-node": {
    "esm": true
  }
}
